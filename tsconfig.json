{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "ES2016",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [ "./src" ],
  "exclude": ["node_modules", "./lib", "**/*.spec.ts"],
}
